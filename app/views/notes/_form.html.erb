<div class="col-md-6 col-md-offset-3">
  <h1 class="form-heading">New Notes</h1>
    <div class="main-div">
			<%= form_for @note,html: {id: "new_note"} do |f|%>
					<div class="form-group">
						<div class="row">
							<label class="col-sm-4 col-md-3 control-label">Note Title</label>
							<div class="col-sm-8 col-md-7">
							  <%= f.text_field :title, class: "form-control", required: true, placeholder: "" %>
							</div>
						</div>
					</div>

					<div class="form-group">
						<div class="row">
							<label class="col-sm-4 col-md-3 control-label">Description</label>
							<div class="col-sm-8 col-md-7">
							  <%= f.text_area :body, class: "form-control", placeholder: "" %>
							</div>
						</div>
					</div>

          <div class="form-group">
						<div class="row">
							<label class="col-sm-4 col-md-3 control-label">Tags</label>
							<div class="col-sm-8 col-md-7">
							  <%= text_field_tag 'tags',  nil, class: "form-control" %>
							</div>
						</div>
					</div>

					<div class="form-group">
						<div class="text-center attendee-cent-s">
							<button class="btn btn-primary" type="submit">Submit</button>
						</div>
				</div>
		<%end%>

    </div>
  </div>
